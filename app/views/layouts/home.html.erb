<!DOCTYPE html>
<html>

	<%= render(:partial => 'layouts/head') %>

<body>
	<!-- Randomized Background Image -->
	<% if @background != nil %>
		<style>
			.mainOuterWrapper {background-image: url(<%= @background.image.url %>);}
		</style>
	<% end %>

	<div class="mainOuterWrapper">
	  <div class="pgOverlay"></div>
	  
		<% if flash[:notice] %>
			<div class="notice"><%= flash[:notice] %></div>
		<% end %>
		<% if flash[:alert] %>
			<div class="alert"><%= flash[:alert] %></div>
		<% end %>
	  
	  <%= render(:partial => 'layouts/navigation') %>
		<div class="cartSummary">
			<%= render(:partial => 'carts/cartSummary') %>
		</div>

	  
		<%= yield %>

<%= render(:partial => 'layouts/bottom') %>
