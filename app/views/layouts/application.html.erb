<!DOCTYPE html>
<html>

	<%= render(:partial => 'layouts/head') %>

<body>
	<!-- Randomized Background Image -->
	<% if @background != nil %>
		<style>
			.outerWrapper {background-image: url(<%= @background.image.url %>);}
		</style>
	<% end %>

	<div class="outerWrapper">
		<div class="pgOverlay"></div>

	  <%= render(:partial => 'layouts/navigation') %>
		<div class="cartSummary">
			<%= render(:partial => 'carts/cartSummary') %>
		</div>
		
	  	<div class="innerWrapper">
		    <%= link_to(image_tag('logo.png', :class => "appLogo"), '/') %>
		    <p class="appMoto">Another Experience Of Wood | Một Cảm Nhận Khác Về Gỗ</p>
		    <p class="appContact-site">44/4A PHAN VAN HON ST, TAN THOI NHAT WARD, DIST. 12, HCMC</p>
		    <p class="appPhone">(+84)986-576-780</p>
		    
		    <% if flash[:notice] %>
					<div class="notice"><%= flash[:notice] %></div>
				<% end %>
				<% if flash[:alert] %>
					<div class="alert"><%= flash[:alert] %></div>
				<% end %>

		    <div class="appContent">
	    	
					<%= yield %>

		    </div>
		    <div class="appFooter">
		      <p> Carpenta Woodworking Shop Copyright © 2013 All Rights Reserved</p>
		    </div>
	 	</div>

<%= render(:partial => 'layouts/bottom') %>
